        <script>
            $(document).ready(function() {

                //Disable css anmiation for Safari
                if ($.browser.name == 'safari') {
                    $('.horsestay').css('-webkit-animation', 'none')
                    $('.horsestay').css('animation', 'none')
                    $('.horsestay').css('background-image', 'url("//{{ app.request.httpHost}}/grand/images/stayTuned/Horse_Running.gif")')
                }

                relocateScrollMore();

                //Scrool more button
                function relocateScrollMore() {
                    var windowHeight = $('html').height();
                    var windowHeight = $('html').outerHeight();
                    var sectionHeight = $('#first_section').height();

                    if (windowHeight < sectionHeight) {
                        var scrollMoreHeight = $('.scroll_more').height();
                        var offsetExtra = -45;
                        var topHeight = ((sectionHeight - windowHeight) + scrollMoreHeight + offsetExtra) + 'px';

                        $('.scroll_more').css({
                            'bottom': topHeight
                        });
                    }
                }


                var horses = [
                    {
                        speed: 4,
                        delay: 0
                    },
                    {
                        speed: 3,
                        delay: 1000
                    },
                    {
                        speed: 4,
                        delay: 2000
                    },
                    {
                        speed: 5,
                        delay: 3000,
                        last: true
                    },
                    {
                        speed: 3,
                        delay: 4000
                    }
                ];

                horse_animation();

                function reloadHorses() {
                    $(".horse").each(function(i, horse) {
                        $(horse).css({
                            "left": (-260 - (Math.ceil(Math.random() * 300))) + "px",
                            "display": "none"
                        });
                    });
                }

                function horse_animation() {
                    reloadHorses();
                    var windowWidth = $(window).width();
                    var animationSpeed = 2000 + Math.ceil(700 * (350 / windowWidth));
                    var endPos = windowWidth + 260 + "px";

                    $(horses).each(function(number, horse) {
                        setTimeout(function() {
                            $(".horse.h" + (number + 1)).show()
                                    .css({
                                        '-webkit-animation-duration': (horse.speed / 4) + 's',
                                        '-moz-animation-duration': (horse.speed / 4) + 's',
                                        'animation-duration': (horse.speed / 4) + 's',
                                    })
                                    .animate({
                                        left: endPos
                                    }, animationSpeed * horse.speed, horse.last ? horse_animation : null);
                        }, horse.delay);
                    });

                }

                function isiPhone() {
                    return (
                            (navigator.platform.indexOf("iPhone") != -1) ||
                            (navigator.platform.indexOf("iPod") != -1) ||
                            (navigator.platform.indexOf("iPad") != -1)
                            );
                }


                if (isiPhone()) {
                    $('#video-container').css('display', 'none');
                    $('#scene').css('display', 'block');

                    $('#first_section').css({
                        'background-image': 'url(//{{ app.request.httpHost}}/grand/images/banner-background.jpg)'
                    });
                }

                //Show all button
                $('#show-all-button').click(function(event) {
                    event.preventDefault();
                    $('#rating-blocks-wrapper').css('height', 'auto');
                    $(this).hide();
                });

