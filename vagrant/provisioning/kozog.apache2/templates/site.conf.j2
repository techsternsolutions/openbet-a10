NameVirtualHost *:80

<VirtualHost *:80>
	ServerAdmin admin.codesushi@gmail.com
	ServerName {{ item.domain }}
	ServerAlias www.{{ item.domain }}

	DocumentRoot {{ item.path }}/web
	<Directory "{{ item.path }}/web">
		AllowOverride All
	</Directory>

	ErrorLog ${APACHE_LOG_DIR}/{{ item.domain }}-error.log
	CustomLog ${APACHE_LOG_DIR}/{{ item.domain }}.log combined
</VirtualHost>
